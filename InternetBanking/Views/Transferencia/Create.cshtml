@model InternetBanking.Core.Application.ViewModels.Transferencia.SaveTransferenciaViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SaveTransferenciaViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control"/>
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCuentaAhorro" class="control-label"> Seleccione la cuenta Salida</label>
