                </select>
                <span asp-validation-for="IdCuentaAhorro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CuentaDestinoId" class="control-label">Seleccione la cuenta Salida que recibira</label>
                <select required asp-for="CuentaDestinoId" asp-items="@(new SelectList(Model.CuentaDestino,"IdCuentaAhorro","NumeroCuenta"))" class="form-select">
                    <option value="">Seleccione una Cuenta</option>
                </select>
                <span asp-validation-for="CuentaDestinoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
