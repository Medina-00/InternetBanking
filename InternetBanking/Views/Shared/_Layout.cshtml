@using InternetBanking.Core.Application.Dtos.Account.Response
@using Microsoft.AspNetCore.Http
@using InternetBanking.Core.Application.Helpers;
@inject IHttpContextAccessor httpContextAccessor
@{
    var User = httpContextAccessor.HttpContext.Session.Get<AuthenticationResponse>("user");
    var Cliente = User != null ? User.Roles.Any(r => r == "Cliente") : false;
    var Admin = User != null ? User.Roles.Any(r => r == "Administrador") : false;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Internet Banking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tienda.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/scripts.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed my-text">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="#">Internet Banking</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    @if (User != null)
                    {
                        <div class="nav">

                            @if (Admin)
                            {
                                <div class="sb-sidenav-menu-heading"><i class="fas fa-user fa-fw"></i>Adminitrador</div>
                                <div class="sb-sidenav-menu-heading">Core</div>
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <div class="sb-nav-link-icon"><i class="fas fa-user fa-fw"></i></div>
                                    Home
                                </a>
                                <a class="nav-link" asp-controller="User" asp-action="Index">
                                    <div class="sb-nav-link-icon"></div>
                                    Users
                                </a>

                            }
                            @if (Cliente)
                            {
                                <div class="sb-sidenav-menu-heading"><i class="fas fa-user fa-fw"></i>Cliente</div>

                                <a class="nav-link" asp-controller="Producto" asp-action="Index">
                                    <div class="sb-nav-link-icon"></div>
                                    Mis Productos
                                </a>
                                <a class="nav-link" asp-controller="Beneficiario" asp-action="Index">
                                    <div class="sb-nav-link-icon"></div>
                                    Mis Beneficiarios
                                </a>

                                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                                    <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                                    Tipos De Pagos
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" asp-controller="Pago" asp-action="CreatePagoExpreso" asp-route-tipo="Expreso">Pago Expreso</a>
                                        <a class="nav-link" asp-controller="Pago" asp-action="CreatePagoTarjetaCredito" asp-route-tipo="TarjetaCredito">Pago Tarjeta de crédito</a>
                                        <a class="nav-link" asp-controller="Pago" asp-action="CreatePagoPrestamo" asp-route-tipo="Prestamo">Pago Préstamo</a>
                                        <a class="nav-link" asp-controller="Pago" asp-action="CreatePagoBeneficiario" asp-route-tipo="Beneficiario">Pago Beneficiarios</a>
                                    </nav>
                                </div>
                                <a class="nav-link" asp-controller="AvancesEfectivo" asp-action="Create">
                                    <div class="sb-nav-link-icon"></div>
                                    Avances Efectivo
                                </a>

                                <a class="nav-link" asp-controller="Transferencia" asp-action="Create">
                                    <div class="sb-nav-link-icon"></div>
                                    Transferencias
                                </a>
                            }
                            <a class="nav-link" asp-controller="User" asp-action="LogOut">
                                <div class="sb-nav-link-icon"></div>
                                LogOut
                            </a>


                        </div>
                    }
                </div>
                <div class="sb-sidenav-footer bg-dark">
                    <div class="small">Luis Angel Morel</div>
                    Internet Banking
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <br />
            <br />
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <footer class="py-4 bg-dark mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2024</div>

                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
