@model InternetBanking.Core.Application.ViewModels.User.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutSinNav.cshtml";

}

 
<body class="bg-primary" >
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login 👀</h3></div>
                                <div class="card-body">
                                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                    @if (Model.HasError)
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <p>@Model.Error</p>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    }

                                    <form asp-controller="User" asp-action="Login" class="my-text">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="Email" placeholder="name@example.com" />
                                            <label asp-for="Email">Email address</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" asp-for="Password" placeholder="Password" />
                                            <label asp-for="Password">Password</label>
                                        </div>
                                        
                                        <div class="mt-4 mb-0">
                                            <div class="d-grid"><input class="btn btn-dark btn-block" value="Entrar" type="submit" /></div>
                                        </div>
                                    </form>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>
</body>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

